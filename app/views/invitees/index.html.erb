<h1>Listing invitees</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Answer</th>
    <th>Guests</th>
    <th>Sent invite at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitees.each do |invitee| %>
  <tr>
    <td><%= invitee.first_name %></td>
    <td><%= invitee.last_name %></td>
    <td><%= invitee.email %></td>
    <td><%= invitee.answer_id %></td>
    <td><%= invitee.guests %></td>
    <td><%= invitee.sent_invite_at %></td>
    <td><%= link_to 'Show', invitee %></td>
    <td><%= link_to 'Edit', edit_invitee_path(invitee) %></td>
    <td><%= link_to 'Destroy', invitee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

